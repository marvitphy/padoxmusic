    <script>
        $('.navbar-toggler').click()

        $(document).ready(function() {
            $('.navbar-toggler').click(function() {
                $(this).find('i').toggleClass('girar-baixo')
                $(this).find('i').toggleClass('girar-cima')
            })

            window.deletarLink = function(id) {



                axios.post('/api/deleteLink', {
                        id: id
                    })
                    .then(function(response) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Link excluído com sucesso!',
                            footer: '<a class="text-danger" href="http://zappata.com.br">Zappata</a>'
                        })

                    })

            }





            window.getLinks = () => {

                axios.get('/api/getLinks')
                    .then(function(response) {
                        // handle success
                        console.log(response.data);

                        if (response.data.length <= 0) {
                            $('.lista-links').html(`<div class="fundo alert " role="alert">
                                                        Você ainda não possui links! :[
                                                        </div>`)
                        } else {

                            for (i in response.data) {
                                $('.lista-links').append(`<div class="card">
                        <div class="card-header">
                            <span href="" onclick="deletarLink(${response.data[i].id})" class="deletarLink float-right" style="margin-right: 9px ;"><i class="fas fa-trash text-danger"></i></span>
                            <span href="" class="float-right" style="margin-right: 9px ;"><i class="fas fa-pencil-alt  text-success"></i></span>
                            <span href="" class="float-right" style="margin-right: 9px ;"><i class="fas fa-eye  text-dark "></i></span>
                        </div>
                        <div class="card-body">
                            <div class=" mb-0">
                                <span>Nome: <b>${response.data[i].nome}</b></span> <br>
                                <span>Link:
                                    <a href="${response.data[i].url}">${response.data[i].url}</a>
                                </span>

                            </div>
                        </div>
                    </div>`)

                            }
                        }

                        $('.deletarLink').on('click', function() {
                            $(this).closest('.card').remove()
                        })
                    })

            }

            getLinks();



            window.addLink = function(nome, url) {
                axios.post('/api/addLink', {
                        nome: nome,
                        url: url
                    })
                    .then(function(response) {


                        Swal.fire({
                            icon: 'success',
                            title: 'Link criado com sucesso'
                        })


                        ////
                        $('#exampleModal').click();
                        $('.lista-links').html('');
                        getLinks();
                        $("html, body").animate({
                            scrollTop: $(document).height()
                        }, 1000);

                    })



            }
            $('.add').click(function() {

                let nome = $('.nome').val()
                let url = 'https://' + $('.url').val()
                $('.nome').val('')
                $('.url').val('')
                addLink(nome, url)


            })



            if (localStorage.getItem('user') == null || localStorage.getItem('user') == 'undefined') {
                window.location.href = 'http://' + window.location.host + '/login'
            } else {

            }

            $('.logout').click(function() {
                localStorage.removeItem("user");
                window.location.href = 'http://' + window.location.host + '/login';
            })
        })
